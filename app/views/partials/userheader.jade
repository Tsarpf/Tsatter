div(ng-controller="UserHeaderController as userCtrl", ng-model="loggedIn")
    div(ng-show="loggedIn", class="loginfield")

        form(ng-submit="logout()", class="form-inline", role="form")
            div(class="form-group")
                p(class="loginfield") Logged in as 
                    strong {{username}}
                button(type="submit", class="btn btn-default") Log out
        
    div(ng-show="!loggedIn", class="loginfield")

        form(name="logInForm", ng-submit="login()", class="loginfield form-inline", role="form")

            div(class="form-group")

                label(class="sr-only", for="username") Username
                input(type="text", ng-model="username", id="username", class="form-control", placeholder="Username")

            div(class="form-group")

                label(class="sr-only", for="password") Password
                input(type="password", ng-model="password", id="password", class="form-control", placeholder="Password")

            button(type="submit", class="btn btn-default") Log in

        form(ng-submit="register()", class="loginfield form-inline", ng-show="!registered", role="form")

            button(type="submit", class="btn btn-default") Register

        p(class="loginfield")
            em {{loginState}} 




