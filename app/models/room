var mongoose = require('mongoose'),
    User = require('./user'),
    Schema = mongoose.Schema;

var Room = new Schema({
    name: {
        type: String
    },
    inviteOnly: {
        type: Boolean,
        default: false
    },
    requiresLogin: {
        type: Boolean,
        default: false
    },
    users: [{
        type: Schema.Types.ObjectId,
        ref: 'User'
    }],
    messages: [{
        message: String,
        username: String
    }]
});

module.exports = mongoose.model('Room', Room);
