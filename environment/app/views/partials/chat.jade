span(ng-controller="ChatController as chatCtrl", class="chat vspace col-xs-12")

    .row.tscontainer

        .users.col-xs-1
            p(ng-repeat="user in users") {{user}}

        div(class="messages col-xs-8", ng-attr-id="{{channel}}", scroll-glue="glued")

            ts-chat-message(ng-repeat="message in messages")
                
            
        .tsmedia.col-xs-3

        //second row

        input(ng-show="!editingNick" type="button" value="{{nick}}" class="col-xs-1 own-nick-area" ng-click="editNick()")
        input(ng-show="editingNick" focus-on="editNick" type="text" class="col-xs-1 own-nick-area" ng-model="nick" ng-click="ownNickAreaClicked()" ng-keyup="$event.keyCode == 13 && ownNickAreaSubmit()")

        input(ng-keyup="$event.keyCode == 13 && chatCtrl.privmsg()", ng-model="message", type="text", class="newMessage col-xs-8")

